<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_empaca_style</item>
        <item name="popupMenuStyle">@style/PopupMenu.Empaca_style</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Empaca_style</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Empaca_style</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Empaca_style</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Empaca_style</item>
        <item name="actionModeBackground">@drawable/cab_background_top_empaca_style</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_empaca_style</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Empaca_style</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Empaca_style.Widget</item>

    </style>

    <style name="ActionBar.Solid.Empaca_style" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_empaca_style</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_empaca_style</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_empaca_style</item>
        <item name="progressBarStyle">@style/ProgressBar.Empaca_style</item>
    </style>

    <style name="ActionBar.Transparent.Empaca_style" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_empaca_style</item>
        <item name="progressBarStyle">@style/ProgressBar.Empaca_style</item>
    </style>

    <style name="PopupMenu.Empaca_style" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_empaca_style</item>
    </style>

    <style name="DropDownListView.Empaca_style" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_empaca_style</item>
    </style>

    <style name="ActionBarTabStyle.Empaca_style" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_empaca_style</item>
    </style>

    <style name="DropDownNav.Empaca_style" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_empaca_style</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_empaca_style</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_empaca_style</item>
    </style>

    <style name="ProgressBar.Empaca_style" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_empaca_style</item>
    </style>

    <style name="ActionButton.CloseMode.Empaca_style" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_empaca_style</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Empaca_style.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Empaca_style</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Empaca_style</item>
    </style>

</resources>